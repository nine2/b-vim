function! TabShowSign()
    if(&relativenumber || &number)
        set lcs=tab:\|\ ,nbsp:% ",trail:-
    else
        set lcs=tab:\ \ ,nbsp:% ",trail:-
    endif
endfunc
" 为方便复制，用<F2>开启/关闭行号显示:
function! HideNumber()
    if(&relativenumber == &number)
        set relativenumber! number!
    elseif(&number)
        set number!
    else
        set relativenumber!
    endif
    call TabShowSign()
    set number?
endfunc
